{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Full build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build newlib",
            "type": "shell",
            "command": "make newlib",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Configure AArch64 QEMU Build",
            "type": "shell",
            "command": "make mrproper; ./configure -p aarch64-none-elf- -r 3 --qemu",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        }
    ]
}